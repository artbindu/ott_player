{
  "name": "mediaplayer",
  "version": "1.0.0",
  "description": "create a custom media player using native html",
  "main": "http-server -p 54322 -o",
  "scripts": {
    "clean": "node -e \"const fs=require('fs'); try { fs.rmSync('dist', {recursive: true, force: true}); } catch(e) {}\"",
    "prebuild": "npm run clean",
    "build": "node build.js",
    "start": "npm run build && http-server dist -p 54322 -o -d",
    "watch": "nodemon --exec npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/artbindu/ott_player"
  },
  "author": "Biswasindhu Mandal",
  "license": "ISC",
  "dependencies": {
    "http-server": "^0.12.1"
  },
  "devDependencies": {
    "clean-css-cli": "^5.6.3",
    "nodemon": "^3.1.10",
    "uglify-js": "^3.19.3"
  }
}
